extends layout
block body
    div(class="alert alert-block alert-{{flash.get().type}}",ng-show="flash.get().body")
        h4 {{flash.get().title}}
        p {{flash.get().body}}

    div(class="container")
        div(class="row")
            div(class="span9")
                h5 GitOpen 2013

    div(class="container")
        div(ng-view, class="gitopen-animate-container", ng-animate="{enter: 'gitopen-enter', leave: 'gitopen-leave'}")

    script(src='components/jquery/jquery.js')
    script(src='components/toastr/toastr.js')
    script(src='components/angularjs-bower/angular.js')
    script(src='components/angularjs-bower/angular-resource.js')
    script(src="components/angular-socket-io/socket.js")
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
    script(src='components/underscore/underscore.js')
    script(src='http://code.jquery.com/ui/1.9.2/jquery-ui.js')

